<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.infectedm.visouapp.db.DadosDeObraViewModel" />
        <variable
            name="obra"
            type="com.infectedm.visouapp.db.Obra" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextObra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Obra"
            android:text="@{obra.obra}" />

        <EditText
            android:id="@+id/editTextDonoDeObra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dono de Obra"
            android:text="@{obra.donoDeObra}" />

        <EditText
            android:id="@+id/editTextEntidadeExecutante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entidade Executante"
            android:text="@{obra.entidadeExecutante}" />

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seguinte" />

    </LinearLayout>
</layout>
